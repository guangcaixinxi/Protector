<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.friday_app_sms" >

    <uses-permission android:name="android.permission.READ_CONTACTS"/><!-- 读取通讯录权限 -->
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/><!-- 写入通讯录权限 -->
    <uses-permission android:name="android.permission.SEND_SMS"/><!-- 发送权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/><!-- 读取状态权限 -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseMessageActivity"
            android:label="@string/title_activity_choose_message" >
        </activity>
        <activity
            android:name=".SendMsgActivity"
            android:label="@string/title_activity_send_msg" >
        </activity>
    </application>

</manifest>
